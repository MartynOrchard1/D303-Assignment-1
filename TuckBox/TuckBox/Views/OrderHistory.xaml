<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TuckBox.Views.OrderHistory"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Order History">

    <!-- top-right menu same as main -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home"          Command="{Binding GoHomeCommand}" />
        <ToolbarItem Text="Place Order"   Command="{Binding GoPlaceOrderCommand}" />
        <ToolbarItem Text="Update User"   Command="{Binding GoUpdateUserCommand}" />
        <ToolbarItem Text="Sign Out"      Command="{Binding SignOutCommand}" />
    </ContentPage.ToolbarItems>

    <RefreshView x:Name="RefreshContainer" Command="{Binding RefreshCommand}">
        <CollectionView x:Name="OrdersList"
                        ItemsSource="{Binding Orders}"
                        Margin="12">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6"
                           Padding="10"
                           CornerRadius="10"
                           BorderColor="#ccc">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding OrderDate}" FontAttributes="Bold" />
                            <Label Text="{Binding CityAndSlot}" FontSize="12" TextColor="Gray" />
                            <Label Text="{Binding ItemsSummary}" FontSize="13" />
                            <Label Text="{Binding Total}" FontAttributes="Bold" TextColor="Green" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
