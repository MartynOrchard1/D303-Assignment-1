<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuckBox.Views.Register"
             Title="Register">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="First Name" Text="{Binding FirstName}" />
            <Entry Placeholder="Last Name" Text="{Binding LastName}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <Entry Placeholder="Mobile" Text="{Binding Mobile}" />

            <Button Text="Register"
                    Command="{Binding RegisterCommand}" />

            <Button Text="Back to Login"
                    Command="{Binding GoToLoginCommand}" />

            <Label Text="{Binding StatusMessage}" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>