<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TuckBox.Views.UpdateUser"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Update Profile">

    <!-- top-right 3-dot like other pages -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home"          Command="{Binding GoHomeCommand}" />
        <ToolbarItem Text="Place Order"   Command="{Binding GoPlaceOrderCommand}" />
        <ToolbarItem Text="Order History" Command="{Binding GoOrderHistoryCommand}" />
        <ToolbarItem Text="Sign Out"      Command="{Binding SignOutCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Update your details" FontAttributes="Bold" FontSize="20" />

            <Entry x:Name="FirstNameEntry"
                   Placeholder="First Name" />

            <Entry x:Name="LastNameEntry"
                   Placeholder="Last Name" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   IsEnabled="False" />

            <Entry x:Name="MobileEntry"
                   Placeholder="Mobile" />

            <!-- extra: default delivery address -->
            <Entry x:Name="AddressEntry"
                   Placeholder="Delivery address (optional)" />

            <Picker x:Name="CityPicker"
                    Title="Delivery City" />

            <Button Text="Save Changes"
                    x:Name="SaveButton"
                    Clicked="OnSaveClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
