<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuckBox.Views.Login"
             Title="Login">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Button Text="Go to Register" Command="{Binding GoToRegisterCommand}" />

        <BoxView HeightRequest="1" Opacity="0.1" />
        <Button Text="Continue with Google"
            Command="{Binding LoginWithGoogleCommand}" />

        <Label Text="{Binding StatusMessage}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>