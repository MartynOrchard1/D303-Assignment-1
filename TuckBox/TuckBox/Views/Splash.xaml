<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuckBox.Views.Splash"
             Title="Splash">
    <Grid>
        <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="16">
            <Image x:Name="Logo"
             Source="tuckbox_logo"
             WidthRequest="160"
             HeightRequest="160"
             Opacity="0"
             Scale="0.85"/>
            <Label x:Name="Label"
             Text="TuckBox"
             FontSize="24"
             Opacity="0"
             HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>