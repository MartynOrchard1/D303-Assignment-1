<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="TuckBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TuckBox.Views"
    xmlns:pages="clr-namespace:TuckBox"
    Shell.NavBarIsVisible="False"
    Title="TuckBox">

    <!-- Splash -->
    <ShellContent Route="Splash"
                ContentTemplate="{DataTemplate views:Splash}" />

    <!-- auth -->
    <ShellContent Route="Login" ContentTemplate="{DataTemplate views:Login}" />
    <ShellContent Route="Register" ContentTemplate="{DataTemplate views:Register}" />

    <!-- app pages -->
    <ShellContent Route="Home" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="PlaceOrder" ContentTemplate="{DataTemplate views:PlaceOrder}" />
    <ShellContent Route="UpdateUser" ContentTemplate="{DataTemplate views:UpdateUser}" />
    <ShellContent Route="OrderHistory" ContentTemplate="{DataTemplate views:OrderHistory}" />
    <ShellContent Route="CurrentOrder" ContentTemplate="{DataTemplate views:CurrentOrder}" />
</Shell>
