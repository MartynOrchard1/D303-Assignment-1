<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TuckBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TuckBox"
    Title="TuckBox">

    <!-- Splash (default) -->
    <ShellContent Route="Splash" ContentTemplate="{DataTemplate views:Splash}" />

    <!-- Login -->
    <ShellContent Route="Login" ContentTemplate="{DataTemplate views:Login}" />

    <!-- Main -->
    <ShellContent Route="Main" ContentTemplate="{DataTemplate views:MainPage}" />
</Shell>
