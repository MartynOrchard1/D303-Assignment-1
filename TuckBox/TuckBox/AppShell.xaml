<?xml version="1.0" encoding="utf-8" ?>
<Shell     
    x:Class="TuckBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TuckBox"
    Title="TuckBox"
    >

    <!-- Splash -->
    <ShellContent Route="Splash">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <views:Splash />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>

    <!-- Login -->
    <ShellContent Route="Login">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <views:Login />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>

    <!-- Main (placeholder) -->
    <ShellContent Route="Main">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <views:MainPage />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>
    
</Shell>
